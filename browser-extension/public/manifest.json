{
  "name": "GrocerySpend.io Helper",
  "version": "1.0.0",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistence": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "identity",
    "notifications",
    "storage",
    "http://localhost:8080/",
    "https://*.auth0.com/*"
  ], 
  "key": "gphmemfooelbfnnlnjegjofkkabhebek"
}
